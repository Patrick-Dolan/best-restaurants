@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants </h3>
}

@foreach (Restaurant restaurant in Model)
{
  <h3>@Html.ActionLink($"{@restaurant.Name}", "Details", new {id = restaurant.RestaurantId})</h3>
  <ul>
    <li>@restaurant.Description</li>
  </ul>
}
<p>@Html.ActionLink("Add a restaurant", "Create")</p>